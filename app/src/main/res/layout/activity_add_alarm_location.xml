<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:aiv="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">
    <include layout="@layout/lay_action_title_bar"></include>
    <!-- 选项-->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.example.wanghanp.myview.AddItemView
                android:id="@+id/aiv_tag_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                aiv:aivtitle="地点提醒内容"
                aiv:aivdesc="提醒内容"
                >

            </com.example.wanghanp.myview.AddItemView>

            <TextView
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                style="@style/Divider_gray" />
            <com.example.wanghanp.myview.AddItemView
                android:id="@+id/aiv_choose_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                aiv:aivtitle="时间选择"
                aiv:aivdesc="一次性闹钟"
                >

            </com.example.wanghanp.myview.AddItemView>

            <TextView
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                style="@style/Divider_gray" />
            <com.example.wanghanp.myview.AddItemView
                android:id="@+id/aiv_location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                aiv:aivtitle="地点(进入附近1000米提醒闹钟)"
                aiv:aivdesc="提醒地点选择"
                aiv:aivsrc="@mipmap/arrow"
                >
            </com.example.wanghanp.myview.AddItemView>

            <TextView
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                style="@style/Divider_gray" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>
