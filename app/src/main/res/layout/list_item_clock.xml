<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="90dp"
        android:orientation="horizontal">
    <com.example.wanghanp.myview.NiceImageView
        android:layout_width="55dp"
        android:layout_height="55dp"
        app:is_circle="true"
        app:border_color="@color/colorAccent"
        app:border_width="0dp"
        android:layout_marginLeft="10dp"
        android:layout_gravity="center_vertical"
        android:src="@mipmap/header_icon_1"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:minWidth="100dp"
        android:layout_weight="1"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingTop="5dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/tv_clock_type"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="5dp"
                android:background="@mipmap/mark" />
            <TextView
                android:id="@+id/tv_clock_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="爱闹提醒"
                android:textSize="13sp"
                android:textColor="@color/black"/>
        </LinearLayout>
        <TextView
            android:id="@+id/tv_clock_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="01:00(每天)"
            android:textSize="16sp"
            android:paddingBottom="3dp"
            android:textStyle="bold"
            android:textColor="@color/color_bg"
            android:paddingTop="3dp"/>

        <TextView
            android:id="@+id/tv_clock_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:text="停用"
            android:textSize="12sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="65dp"
        android:layout_height="match_parent"
        android:layout_weight="0"
        android:gravity="right|center_vertical">

        <ImageView
            android:id="@+id/iv_switch"
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:layout_marginRight="15dp" />
    </LinearLayout>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="@color/text_gray"/>
</LinearLayout>
